{% extends "BlogBundle::layout.html.twig" %}

{% block title %}
Article- {{ parent() }}
{% endblock %}

{% block blog_body %}

<h2>Article {{article.id}}</h2>

<div class="row">
<div class="card col-md-8" style="width: 20rem;">
    <div class="card-body">
      <h4 class="card-title">{{article.titre}}</h4>
      <p class="card-text">{{article.content}}</p>
      
      <div class="card-footer text-muted">
          <p> {{article.author}} : {{article.date|date('d/m/Y')}}</p>
          <p>Nombre de vue : {{article.vue}}</p>
          </div>
    </div>
  </div>
</div>
{% endblock blog_body  %}